<?xml version="1.0" encoding="UTF-8"?>
<web-app>
		<error-page>
			<error-code>
		    502
	        </error-code>
	        <location>
	            /error502.html
	        </location>
	    </error-page>
        <servlet>
                <servlet-name>GSSService</servlet-name>
                <servlet-class>gr.ebs.gss.server.GSSServiceImpl</servlet-class>
        </servlet>
        <servlet>
                <servlet-name>FileUpload</servlet-name>
                <servlet-class>gr.ebs.gss.server.FileUpload</servlet-class>
        </servlet>
        <servlet>
                <servlet-name>FileDownload</servlet-name>
                <servlet-class>gr.ebs.gss.server.FileDownload</servlet-class>
        </servlet>
        <servlet>
                <servlet-name>Login</servlet-name>
                <servlet-class>gr.ebs.gss.server.Login</servlet-class>
        </servlet>
        <servlet>
                <servlet-name>NonceIssuer</servlet-name>
                <servlet-class>gr.ebs.gss.server.NonceIssuer</servlet-class>
        </servlet>
        <servlet>
                <servlet-name>TokenRetriever</servlet-name>
                <servlet-class>gr.ebs.gss.server.TokenRetriever</servlet-class>
        </servlet>
        <servlet>
                <servlet-name>RESTHandler</servlet-name>
                <servlet-class>gr.ebs.gss.server.rest.RequestHandler</servlet-class>
				<init-param>
					<param-name>input</param-name>
					<param-value>4096</param-value>
				</init-param>
				<init-param>
					<param-name>output</param-name>
					<param-value>4096</param-value>
				</init-param>
        </servlet>

        <servlet-mapping>
                <servlet-name>GSSService</servlet-name>
                <url-pattern>/gss</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>FileUpload</servlet-name>
                <url-pattern>/fileUpload</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>FileDownload</servlet-name>
                <url-pattern>/fileDownload</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>Login</servlet-name>
                <url-pattern>/login</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>NonceIssuer</servlet-name>
                <url-pattern>/nonce</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>TokenRetriever</servlet-name>
                <url-pattern>/token</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
                <servlet-name>RESTHandler</servlet-name>
                <url-pattern>/rest/*</url-pattern>
        </servlet-mapping>
</web-app> 